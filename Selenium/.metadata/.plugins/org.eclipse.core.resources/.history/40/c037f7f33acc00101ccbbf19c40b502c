package StepDefinition;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

import PageObject.CreateLpo;
import PageObject.LoginSnoc;
import Utils.Setuptest;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class Create_LpoStepDefinition {
	
//	static WebDriver driver;
	public Setuptest testsetup;

	public Create_LpoStepDefinition(Setuptest testSetup) {
		this.testsetup = testSetup;
	}
	
	@Given("User navigates the Lpo page")
	public void user_navigates_the_lpo_page() throws InterruptedException {
		CreateLpo Lpo = testsetup.pageObjectManager.getCreateLpo();
		Thread.sleep(2000);
		Lpo.clickthreedot();
		Thread.sleep(2000);
		Lpo.clickprocurement();
		Thread.sleep(2000);
		Lpo.clickLpo();
	}

	@When("Select the products which is already approved")
	public void select_the_products_which_is_already_approved() throws InterruptedException {
		CreateLpo Lpo = testsetup.pageObjectManager.getCreateLpo();
		Thread.sleep(2000);
		Lpo.clickwearhousefitler();
		Thread.sleep(2000);
		Lpo.wearhousedropdown();
		Thread.sleep(2000);
		Lpo.selectwearouse();
		Thread.sleep(2000);
		Lpo.searchfield_validation();
		Thread.sleep(2000);
		Lpo.selectproductsAfterSearch();
//		Lpo.selectproducts();
		
	}

	@Then("go to next page and check the all selected products are came")
	public void go_to_next_page_and_check_the_all_selected_products_are_came() {
		CreateLpo Lpo = testsetup.pageObjectManager.getCreateLpo();
		Lpo.clicknextbutton();
	}

	@Then("Move to third page and confirm the data and click the submit button")
	public void move_to_third_page_and_confirm_the_data_and_click_the_submit_button() throws InterruptedException {
		CreateLpo Lpo = testsetup.pageObjectManager.getCreateLpo();
		Lpo.clicknextbutton();
		Thread.sleep(2000);
		Lpo.clicksubmittbutton();
		Lpo.ClickConfirmButton();
		Lpo.clickNoButton();
	}

	@Then("Verify the LPO is created successfully")
	public void verify_the_lpo_is_created_successfully() throws InterruptedException {
		CreateLpo Lpo = testsetup.pageObjectManager.getCreateLpo();		
		Thread.sleep(2000);
		Lpo.CreateLpoValidation();
	}

}
